package com.poc.banking.UserService;

import com.poc.banking.UserService.entities.UserAccount;

import jakarta.persistence.CascadeType;
import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.FetchType;
import jakarta.persistence.Id;
import jakarta.persistence.OneToOne;
import jakarta.persistence.PrimaryKeyJoinColumn;

@Entity
public class UserDetails {
	@Id
	@Column(name = "ID")
	int id;
	@PrimaryKeyJoinColumn
	@OneToOne(targetEntity = UserAccount.class, cascade = CascadeType.ALL, fetch = FetchType.EAGER,optional= false, mappedBy = "userId")	String userId;
	String password;
	public int getId() {
		return id;
	}
	public void setId(int id) {
		this.id = id;
	}
	public String getUserId() {
		return userId;
	}
	public void setUserId(String userId) {
		this.userId = userId;
	}
	public String getPassword() {
		return password;
	}
	public void setPassword(String password) {
		this.password = password;
	}
	
}
