package com.poc.banking.UserService.entities.specs;

import org.springframework.data.jpa.domain.Specification;

import com.poc.banking.UserService.UserDetails;
import com.poc.banking.UserService.UserDetails_;
import com.poc.banking.UserService.entities.UserAccount;

import jakarta.persistence.Entity;

@Entity
public class UserAccountSpec {
	public static Specification<UserAccount> isValiduser( UserDetails user) {
	    return (root, query, builder) -> {
	     // LocalDate date = LocalDate.now().minusYears(2);
	   // CriteriaQuery<UserDetails> q =	builder.createQuery(UserDetails.class);
	      return builder.and(builder.equal(root.get(UserAccount_.USER_ID), user.getUserId()));
	    };
	  }
}
